<h1><%=@post.title%></h1>

<%= @post.content%>


<h2>Categories</h2>
<%=@post.categories.each do |category|%>
<%=link_to category.name, category_path(category)%>
<%end%>

<h2>Comments</h2>
<%=@post.comments.each do |comment|%>
<%=link_to comment.user, user_path(comment.user)%> <%=comment.content%>
<%end%>
